  <script>
    // set year
    document.getElementById('year').textContent = new Date().getFullYear();

    // fake submit handler: this demo doesn't send emails (no backend).
    function handleSubmit(e){
      e.preventDefault();
      var email = document.getElementById('email').value;
      var msg = document.getElementById('msg');
      msg.textContent = 'Thanks — this demo does not actually send email. To collect emails, add a backend or connect to a service like Formspree, Netlify Forms, or GitHub Actions.';
      return false;
    }
